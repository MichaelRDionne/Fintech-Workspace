{
  "metadata": {
    "schemaVersion": "1.0",
    "importType": "LEX",
    "importFormat": "JSON"
  },
  "resource": {
    "name": "InternationalCryptoConverter",
    "version": "2",
    "intents": [
      {
        "name": "convertDollars",
        "version": "7",
        "fulfillmentActivity": {
          "codeHook": {
            "uri": "arn:aws:lambda:us-west-2:204919734706:function:convertDollarsInt",
            "messageVersion": "1.0"
          },
          "type": "CodeHook"
        },
        "sampleUtterances": [
          "I want to convert {currency} to BTC",
          "I want to convert {currency} to bitcoin",
          "I want to convert {dollars} {currency} to BTC",
          "I want to convert {dollars} {currency} to bitcoin"
        ],
        "slots": [
          {
            "sampleUtterances": [],
            "slotType": "AMAZON.DATE",
            "obfuscationSetting": "NONE",
            "slotConstraint": "Required",
            "valueElicitationPrompt": {
              "messages": [
                {
                  "contentType": "PlainText",
                  "content": "This service can only be used by people over 21 years old, could you please give me your date of birth?"
                }
              ],
              "maxAttempts": 2
            },
            "priority": 1,
            "name": "birthday"
          },
          {
            "sampleUtterances": [],
            "slotType": "AMAZON.AlphaNumeric",
            "obfuscationSetting": "NONE",
            "slotConstraint": "Required",
            "valueElicitationPrompt": {
              "messages": [
                {
                  "contentType": "PlainText",
                  "content": "This service can only convert from US or Canadian dollars. What currency do you want to convert? Type USD or CAD."
                }
              ],
              "maxAttempts": 2
            },
            "priority": 3,
            "name": "currency"
          },
          {
            "sampleUtterances": [],
            "slotType": "AMAZON.NUMBER",
            "obfuscationSetting": "NONE",
            "slotConstraint": "Required",
            "valueElicitationPrompt": {
              "messages": [
                {
                  "contentType": "PlainText",
                  "content": "How many dollars do you want to convert?"
                }
              ],
              "maxAttempts": 2
            },
            "priority": 2,
            "name": "dollars"
          }
        ],
        "dialogCodeHook": {
          "uri": "arn:aws:lambda:us-west-2:204919734706:function:convertDollarsInt",
          "messageVersion": "1.0"
        }
      }
    ],
    "voiceId": "Joanna",
    "childDirected": false,
    "locale": "en-US",
    "idleSessionTTLInSeconds": 300,
    "clarificationPrompt": {
      "messages": [
        {
          "contentType": "PlainText",
          "content": "Sorry, can you please repeat that?"
        }
      ],
      "maxAttempts": 5
    },
    "abortStatement": {
      "messages": [
        {
          "contentType": "PlainText",
          "content": "Sorry, I could not understand. Goodbye."
        }
      ]
    },
    "detectSentiment": false,
    "enableModelImprovements": false
  }
}